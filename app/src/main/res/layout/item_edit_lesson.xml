<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_edit_lesson"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="100dp">

        <TextView
            android:id="@+id/number_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_number_edit_lesson"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/image_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_add_black_24dp" />

        <TextView
            android:id="@+id/name_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/number_lesson"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/type_lesson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_lesson"
            android:layout_centerHorizontal="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="9sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>